{
    "name": "adepto/framework",
    "description": "The Adepto Framework",
    "keywords": [
        "Framework",
        "Adepto"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Hans Olivas",
            "email": "hansolivas1@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Adepto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "pestphp/pest": "^3.6"
    }
}
